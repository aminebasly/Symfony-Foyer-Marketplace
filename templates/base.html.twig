            <script>
document.querySelectorAll('.navbar a').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
        const href = this.getAttribute('href');

        // Si le href commence par '#' (une ancre interne), empêchez le comportement par défaut
        if (href.startsWith('#')) {
            e.preventDefault();
            const targetElement = document.querySelector(href);

            // Défilement fluide uniquement pour les ancres internes
            if (targetElement) {
                targetElement.scrollIntoView({
                    behavior: 'smooth'
                });
            }
        } else {
            // Sinon, pour les liens externes ou relatifs (comme /contact), laissez le comportement par défaut
            return;
        }
    });
});

        const faders = document.querySelectorAll('.fade-in');
            window.addEventListener('scroll', () => {
                faders.forEach(fader => {
                  const rect = fader.getBoundingClientRect();
                  if (rect.top < window.innerHeight) {
                     fader.classList.add('show');
        }
    });
});

    </script>
    <script>
    window.addEventListener('scroll', function () {
        const navbar = document.querySelector('.navbar');

        // Change la classe en fonction de la position du défilement
        if (window.scrollY > 50) {
            navbar.classList.add('scrolled');
            navbar.classList.remove('transparent');
        } else {
            navbar.classList.add('transparent');
            navbar.classList.remove('scrolled');
        }
    });
</script>

